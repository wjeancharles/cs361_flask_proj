{% extends 'pages/base.jinja2' %}

{% block content %}

{% if search == [] %}
    <h1>There are no fighters with Olympic medals in this category</h1>
{% elif page == "fighter" %}

<table class="table table-secondary table-striped">
    <thead>
        <tr>
        {% for keys in search[0] %}
            <th style="text-align: center">{{ keys.capitalize() }}</th>
        {% endfor %}
    </thead>

    <tbody>
    {% for x in range(length) %}
        <tr>
            <td style="text-align: center">{{ search[x]['name'] }}</td>
            <td style="text-align: center">{{ search[x]['origin'] }}</td>
            <td style="text-align: center">{{ search[x]['sex'] }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['gold']) }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['silver']) }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['bronze']) }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% elif page == "olympic" %}

    <h2>{{ search[0]['city'] }} Olympic Games</h2>

    <table class="table table-secondary table-striped">
    <thead>
        <tr>
        {% for keys in search[1] %}
            <th style="text-align: center">{{ keys.capitalize() }}</th>
        {% endfor %}
    </thead>

    <tbody>
    {% for x in range(length) %}
        <tr>
            <td style="text-align: center">{{ search[x]['category'] }}</td>
            <td style="text-align: center">{{ search[x]['sex'] }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['Gold']) }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['Silver']) }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['Bronze']) }}</td>
            <td style="text-align: center">{{ ','.join(search[x]['Bronze2']) }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

    {% elif page == "country" %}
    <h2>{{ name }} Olympic Champions</h2>
    <table class="table table-secondary table-striped">
    <thead>
        <tr>
        {% for keys in search[0] %}
            <th style="text-align: center">{{ keys.capitalize() }}</th>
        {% endfor %}
    </thead>

    <tbody>
    {% for x in range(length) %}
        <tr>
            <td style="text-align: center">{{ search[x]['name'] }}</td>
            <td style="text-align: center">{{ search[x]['sex'] }}</td>
            <td style="text-align: center">{{ search[x]['class'] }}</td>
            <td style="text-align: center">{{ search[x]['medal'] }}</td>
            <td style="text-align: center">{{ search[x]['year'] }}</td>
            <td style="text-align: center">{{ search[x]['city'] }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}

{% endblock %}