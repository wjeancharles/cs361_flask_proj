{# Olympic game page: Allows the user to search for Olympic games based on the year #}

{% extends 'pages/base.jinja2' %}

{% block content %}
    <!DOCTYPE html>
    <html lang="en">
    <head>
    </head>
    <body>
        <h1>Olympic Games</h1>
        <h2>Select a year to display the Olympic game venue and medalists for that year</h2>

        <form class="center" action="/displayInfo1" method="POST">
        <label for="year">Select a Year to search</label>
        <select id="year" name="year" class="form-control">
            <option value="1964">1964</option>
            <option value="1972">1972</option>
            <option value="1976">1976</option>
            <option value="1980">1980</option>
            <option value="1984">1984</option>
            <option value="1988">1988</option>
            <option value="1992">1992</option>
            <option value="1996">1996</option>
            <option value="2000">2000</option>
            <option value="2004">2004</option>
            <option value="2008">2008</option>
            <option value="2012">2012</option>
            <option value="2016">2016</option>
            <option value="2020">2020</option>
        </select>
            <div>
                <br>
            </div>
        <input type="Submit" value="olympic" id="search_bar" name="search_bar" class="btn btn-secondary">
        </form>

    </body>
    </html>

{% endblock %}
